name: Python Application

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Clone rfof-network Repository
      run: |
        git clone https://github.com/Satoramy-PRAI/RFOF-NETWORK.git
    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r RFOF-NETWORK/requirements.txt || true
    - name: Run Hello @RFOF-NETWORK Script
      run: |
        python RFOF-NETWORK/Hallo_%40RFOF-NETWORK.py
